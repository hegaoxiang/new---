<Window x:Class="GEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <DockPanel HorizontalAlignment="Left" Height="412" LastChildFill="False" Margin="0,0,0,0.5" VerticalAlignment="Bottom" Width="795" RenderTransformOrigin="0.85,0.62" Grid.ColumnSpan="2">
            <Button Content="Button" Height="35" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        </DockPanel>
        <WindowsFormsHost x:Name="wfHost" Width="681" ChildChanged="wfHost_ChildChanged" Background="{DynamicResource {x:Static SystemColors.MenuTextBrushKey}}" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" Margin="65,53,10,37.5" Height="334"/>

    </Grid>
</Window>
